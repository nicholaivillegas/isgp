<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:drawableLeft="@drawable/ic_info_outline_black_18dp"
                android:drawablePadding="5dp"
                android:text="NAME"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/ic_date_range_black_18dp"
                android:drawablePadding="5dp"
                android:text="10/24/99" />

            <TextView
                android:id="@+id/text_calamity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text_name"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/ic_person_outline_black_18dp"
                android:drawablePadding="5dp"
                android:text="Calamity"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_calamity"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/ic_place_black_18dp"
                android:drawablePadding="5dp"
                android:text="Location"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_location"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/ic_description_black_18dp"
                android:drawablePadding="5dp"
                android:text="Description"
                android:textSize="16sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>